{
   "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "build",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "noEmitOnError": true
   },
   "include": ["src"]
}
